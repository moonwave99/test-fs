{
  "name": "@moonwave99/test-fs",
  "description": "A tiny filesystem helper test library.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moonwave99/test-fs.git"
  },
  "homepage": "https://github.com/moonwave99/test-fs",
  "author": {
    "name": "Diego Caponera",
    "email": "hello@diegocaponera.com",
    "url": "https://www.diegocaponera.com"
  },
  "version": "0.0.5",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint --ext .ts src",
    "test": "npx vitest run",
    "test:watch": "npx vitest --maxWorkers=1",
    "test:coverage": "npx vitest run --coverage --maxWorkers=1",
    "dev:site": "npx concurrently 'npx serve site' 'npx nodemon --watch readme.md --exec npm run build:site'",
    "build:site": "rm -rf site && npx readme.com --distPath site"
  },
  "keywords": [
    "fs",
    "test",
    "fixtures",
    "file system"
  ],
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.9.5"
  },
  "dependencies": {
    "fs-extra": "^11.3.1"
  }
}
